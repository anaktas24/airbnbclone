<div id="carouselExampleIndicators" class="carousel slide my-3 card-component" data-ride="carousel" style="overflow: hidden">
  <div class="col card-component">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 image" src="https://random.imagecdn.app/100/150" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 image" src="https://random.imagecdn.app/100/150" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 image" src="https://random.imagecdn.app/100/150" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="card">
    <div class="card-header card-location-height">
      <i class="fa-solid fa-location-pin "></i> <%= listing.location %>
    </div>
    <div class="card-body card-title-height">
      <h4 class="card-title"><%= listing.name %></h4>
    </div>
    <div class="card-body card-body-height">
      <p class="card-text card-body-description"><%= listing.description %></p>
    </div>
    <div class="card-body card-price-height">
      <p class="card-text"><i class="fa-sharp fa-solid fa-sack-dollar"></i> Per hour: <br><%= listing.price_per_hour.to_i.round(2) %> CHF</p>
    </div>
    <div class="card-footer text-muted p-0">
      <%= link_to "Show listing", listing_path(listing), class: "btn btn-primary w-100" %>
    </div>
  </div>
</div>
